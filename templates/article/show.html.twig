{% extends 'base.html.twig' %}

{% block title %}

    Leggi {{title}}

{% endblock %}

{% block body %}

    {{ dump() }}

    <h1><a href="{{ path('app_homepage') }}">{{title}}</a></h1>

    <h2>Comments ({{comments|length}})</h2>

    <ul>
        {% for comment in comments %}
            <li>{{comment}}</li>
        {% endfor %}
    </ul>

{% endblock %}